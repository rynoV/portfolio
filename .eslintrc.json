{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "react-app"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": [
      "error",
      2,
      { "VariableDeclarator": { "var": 2, "let": 2, "const": 3 } }
    ],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "no-console": "off"
  }
}
